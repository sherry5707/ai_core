<?xml version="1.0" encoding="utf-8"?>
<com.tencent.av.ui.DeviceVideoFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dv_framelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.tencent.av.ui.DeviceVideoView
            android:id="@+id/big_dv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/peer_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:scaleType="centerCrop"/>

        <FrameLayout
            android:id="@+id/content_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></FrameLayout>

        <com.tencent.av.ui.DeviceVideoView
            android:id="@+id/small_dv"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp" />

    </FrameLayout>

</com.tencent.av.ui.DeviceVideoFrameLayout>