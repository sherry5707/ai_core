<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/calling_in_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:orientation="vertical">

    <TextView
        android:id="@+id/name_text"
        style="@style/name_text_style"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/desc_text"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="24dp"
        android:gravity="center_horizontal"
        android:includeFontPadding="false"
        android:text="邀请您进行语音聊天"
        android:textColor="@color/white_text_color"
        android:textSize="30dp" />


    <!--
        app:civ_border_color="#ffffff"
        app:civ_border_width="2dp"
    -->
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/head_img"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="110dp"
        android:padding="2dp"
        android:background="@mipmap/contact_avatar_nofound"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="124dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/refuse_btn"
            style="@style/button_h_style"
            android:background="@mipmap/contact_btn_hangup" />

        <Button
            android:id="@+id/accept_btn"
            style="@style/button_h_style"
            android:layout_marginLeft="30dp"
            android:background="@mipmap/contact_btn_answer" />

    </LinearLayout>

</LinearLayout>