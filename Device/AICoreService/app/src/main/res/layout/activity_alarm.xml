<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/fm_bg_black"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="214dp"
        android:layout_height="214dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp">

        <com.tencent.aiaudio.view.XiaoweiCircleView
            android:id="@+id/xcv1"
            android:layout_width="210dp"
            android:layout_height="210dp"
            android:layout_gravity="center"
            app:xc_border_color="#006eff"
            app:xc_border_width="5dp" />

        <com.tencent.aiaudio.view.XiaoweiCircleView
            android:id="@+id/xcv2"
            android:layout_width="210dp"
            android:layout_height="210dp"
            android:layout_gravity="center"
            app:xc_border_color="#00a2ff"
            app:xc_border_width="5dp"
            app:xc_rotate_offset_x="-1dp" />

        <com.tencent.aiaudio.view.XiaoweiCircleView
            android:id="@+id/xcv3"
            android:layout_width="210dp"
            android:layout_height="210dp"
            android:layout_gravity="center"
            app:xc_border_color="#00c6d8"
            app:xc_border_width="5dp"
            app:xc_rotate_offset_y="-1dp" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_alarm_event_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="85dp"
            android:gravity="center_horizontal"
            android:text="去团建"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt_alarm_event_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="20dp"
            android:text="19:00:00"
            android:textColor="@color/white"
            android:textSize="40sp" />

        <Button
            android:id="@+id/btn_alarm_close"
            android:layout_width="143dp"
            android:layout_height="36dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="80dp"
            android:background="@drawable/btn_alarm"
            android:onClick="close"
            android:text="关闭闹钟"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/btn_alarm_delay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:onClick="delay"
            android:paddingBottom="10dp"
            android:paddingTop="20dp"
            android:text="稍后提醒"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </LinearLayout>
</RelativeLayout>