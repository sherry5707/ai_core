<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="11dp"
    android:paddingEnd="0dp"
    android:paddingRight="0dp"
    android:paddingStart="10dp"
    android:paddingLeft="10dp">
    <TextView
        android:id="@+id/item_music_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:maxEms="8"
        android:lines="1"
        android:textColor="@color/white"
        android:ellipsize="end"
        android:text="是不是这样的夜晚你才会这样的想起我"/>
    <TextView
        android:id="@+id/item_music_singer"
        android:layout_width="match_parent"
        android:textSize="10sp"
        android:layout_height="wrap_content"
        android:maxEms="8"
        android:lines="1"
        android:textColor="@color/white"
        android:ellipsize="end"
        android:layout_below="@+id/item_music_name"
        android:layout_marginTop="7dp"
        android:text="吴宗宪"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#605055"
        android:layout_below="@+id/item_music_singer"
        android:layout_marginTop="11dp"/>

    <com.tencent.aiaudio.view.VoiceView
        android:layout_width="22dp"
        android:id="@+id/item_music_select"
        android:layout_marginEnd="7dp"
        android:layout_marginRight="7dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_height="14dp" />
</RelativeLayout>